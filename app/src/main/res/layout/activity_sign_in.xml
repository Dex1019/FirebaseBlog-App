    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/firebase_logo" />


    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:maxLines="2"
        android:text="Welcome to Firebase Blog App"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/et_LoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_app_name"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_outline"
        android:backgroundTint="#fff"
        android:ems="10"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:padding="10dp" />


    <EditText
        android:id="@+id/et_LoginPasssword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_LoginEmail"
        android:layout_marginTop="15dp"
        android:background="@drawable/input_outline"
        android:backgroundTint="#fff"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_LoginPasssword"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="-or-"
        android:textColor="#fff"
        android:textSize="20sp" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_signInBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signUpBtn"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp">

    </com.google.android.gms.common.SignInButton>

    <TextView
        android:id="@+id/signUpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="Don't have an account yet? Sign Up."
        android:textColor="#fff"
        android:textSize="16sp" />


</RelativeLayout>
